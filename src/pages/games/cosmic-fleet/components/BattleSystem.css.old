/* Основной контейнер боя */
.battle-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  z-index: 9999;
}

.battle-screen {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* Звёздный фон */
.stars-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:
    radial-gradient(circle at 10% 20%, rgba(255,255,255,0.9) 0px, transparent 2px),
    radial-gradient(circle at 80% 80%, rgba(255,255,255,0.9) 0px, transparent 2px),
    radial-gradient(circle at 50% 50%, rgba(255,255,255,0.8) 0px, transparent 1px),
    radial-gradient(circle at 90% 10%, rgba(255,255,255,0.9) 0px, transparent 2px),
    radial-gradient(circle at 30% 60%, rgba(255,255,255,0.7) 0px, transparent 1px),
    radial-gradient(circle at 70% 30%, rgba(255,255,255,0.9) 0px, transparent 2px),
    radial-gradient(circle at 40% 90%, rgba(255,255,255,0.8) 0px, transparent 1px),
    radial-gradient(circle at 15% 45%, rgba(255,255,255,0.9) 0px, transparent 2px),
    radial-gradient(circle at 60% 15%, rgba(255,255,255,0.7) 0px, transparent 1px),
    radial-gradient(circle at 85% 55%, rgba(255,255,255,0.9) 0px, transparent 2px),
    radial-gradient(circle at 25% 75%, rgba(200,200,255,0.6) 0px, transparent 1px),
    radial-gradient(circle at 95% 25%, rgba(200,200,255,0.6) 0px, transparent 1px),
    radial-gradient(circle at 45% 40%, rgba(255,200,200,0.5) 0px, transparent 1px),
    radial-gradient(circle at 55% 70%, rgba(200,255,200,0.5) 0px, transparent 1px),
    linear-gradient(180deg, #0a0a1a 0%, #000510 50%, #000000 100%);
  background-size:
    250% 250%,
    300% 300%,
    350% 350%,
    200% 200%,
    280% 280%,
    320% 320%,
    360% 360%,
    240% 240%,
    300% 300%,
    220% 220%,
    400% 400%,
    380% 380%,
    420% 420%,
    360% 360%,
    100% 100%;
  animation: starsMove 200s linear infinite;
}

@keyframes starsMove {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: -1000px -500px;
  }
}

/* Контейнер битвы */
.battle-container {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
}

/* Кнопка закрытия */
.close-button {
  position: absolute;
  top: 20px;
  right: 20px;
  background: rgba(255, 68, 68, 0.2);
  border: 1px solid #ff4444;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  color: #ff4444;
  font-size: 1.2rem;
  cursor: pointer;
  z-index: 10;
  transition: all 0.3s ease;
}

.close-button:hover {
  background: rgba(255, 68, 68, 0.4);
  transform: scale(1.1);
}

/* HUD сверху */
.battle-hud {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 20px;
  background: linear-gradient(180deg, rgba(0,0,0,0.8) 0%, transparent 100%);
  z-index: 10;
}

.player-hud, .enemy-hud {
  display: flex;
  align-items: center;
  gap: 15px;
}

.hud-ship-icon {
  font-size: 3rem;
  animation: shipGlow 2s infinite alternate;
}

@keyframes shipGlow {
  0% {
    filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.5));
  }
  100% {
    filter: drop-shadow(0 0 15px rgba(255, 255, 255, 1));
  }
}

.hud-info {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.hud-name {
  color: #00f0ff;
  font-size: 1.2rem;
  font-weight: bold;
}

.enemy-hud .hud-name {
  color: #ff4444;
}

.hud-health-bar {
  width: 200px;
  height: 8px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4px;
  overflow: hidden;
}

.hud-health-fill {
  height: 100%;
  background: linear-gradient(90deg, #44ff44, #00aa00);
  border-radius: 4px;
  transition: width 0.5s ease;
}

.enemy-hud .hud-health-fill {
  background: linear-gradient(90deg, #ff4444, #cc0000);
}

.hud-health-text {
  color: #aaa;
  font-size: 0.85rem;
}

/* Визуальные корабли на экране */
.battle-ships {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 5;
  pointer-events: none;
}

.visual-ship {
  position: absolute;
  font-size: 8rem;
  transition: all 0.3s ease;
  animation: shipFloat 6s ease-in-out infinite;
  filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.8));
}

.visual-ship.player {
  left: 10%;
  bottom: 30%;
  transform: rotate(-10deg);
}

.visual-ship.enemy {
  right: 10%;
  top: 20%;
  transform: rotate(170deg);
  animation-delay: -3s;
  filter: drop-shadow(0 0 20px rgba(255, 100, 100, 0.8));
}

@keyframes shipFloat {
  0%, 100% {
    transform: translateY(0) translateX(0);
  }
  25% {
    transform: translateY(-15px) translateX(8px);
  }
  50% {
    transform: translateY(-5px) translateX(15px);
  }
  75% {
    transform: translateY(-10px) translateX(8px);
  }
}

.visual-ship.attacking {
  animation: shipAttack 0.5s ease-out;
}

@keyframes shipAttack {
  0% {
    transform: translateY(-50%) translateX(0) scale(1);
  }
  50% {
    transform: translateY(-50%) translateX(30px) scale(1.2);
  }
  100% {
    transform: translateY(-50%) translateX(0) scale(1);
  }
}

/* Лазерный луч */
.laser-beam {
  position: absolute;
  height: 6px;
  background: linear-gradient(90deg,
    transparent,
    rgba(255, 255, 0, 0.3),
    rgba(255, 255, 0, 1),
    rgba(255, 150, 0, 1),
    rgba(255, 255, 0, 0.3),
    transparent
  );
  box-shadow: 0 0 15px #ffff00, 0 0 30px #ff8800, 0 0 45px #ffff00;
  z-index: 6;
  animation: laserFire 0.6s ease-out;
  transform-origin: left center;
}

.laser-beam.to-enemy {
  left: 18%;
  bottom: 38%;
  width: 65%;
  transform: rotate(-15deg);
}

.laser-beam.to-player {
  right: 18%;
  top: 28%;
  width: 65%;
  transform: rotate(-15deg) scaleX(-1);
}

@keyframes laserFire {
  0% {
    width: 0;
    opacity: 0;
  }
  20% {
    opacity: 1;
  }
  100% {
    opacity: 0.8;
  }
}

/* Эффект взрыва */
.explosion-effect {
  position: fixed;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: radial-gradient(circle,
    rgba(255, 255, 0, 1) 0%,
    rgba(255, 150, 0, 0.8) 20%,
    rgba(255, 50, 0, 0.6) 40%,
    transparent 70%
  );
  transform: translate(-50%, -50%) scale(0);
  animation: explode 0.8s ease-out;
  pointer-events: none;
  z-index: 10;
}

@keyframes explode {
  0% {
    transform: translate(-50%, -50%) scale(0);
    opacity: 1;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(2.5);
    opacity: 0;
  }
}

/* Секция лога */
.battle-log-section {
  background: rgba(0, 0, 0, 0.5);
  border-radius: 15px;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #444;
  flex: 0 0 100px;
  display: flex;
  flex-direction: column;
}

.battle-log-header {
  color: #ff6600;
  font-weight: bold;
  margin-bottom: 10px;
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.battle-log {
  flex: 1;
  overflow-y: auto;
  padding-right: 5px;
}

.battle-log::-webkit-scrollbar {
  width: 6px;
}

.battle-log::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 3px;
}

.battle-log::-webkit-scrollbar-thumb {
  background: rgba(255, 102, 0, 0.5);
  border-radius: 3px;
}

.battle-log-empty {
  color: #aaa;
  text-align: center;
  padding: 40px 20px;
  font-size: 0.9rem;
}

.battle-log-message {
  color: #fff;
  margin-bottom: 8px;
  font-size: 0.9rem;
  line-height: 1.4;
  opacity: 0.7;
  transition: opacity 0.3s ease;
  animation: messageAppear 0.3s ease-out;
}

.battle-log-message.latest {
  opacity: 1;
  color: #ffdd00;
}

@keyframes messageAppear {
  0% {
    opacity: 0;
    transform: translateX(-10px);
  }
  100% {
    opacity: 0.7;
    transform: translateX(0);
  }
}

/* Кнопки управления */
.battle-controls {
  display: flex;
  justify-content: center;
  gap: 15px;
}

.battle-button {
  background: linear-gradient(135deg, #44ff44, #00aa00);
  border: none;
  border-radius: 15px;
  padding: 15px 30px;
  color: #fff;
  font-size: 1.2rem;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 0 5px 15px rgba(68, 255, 68, 0.4);
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.battle-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 7px 20px rgba(68, 255, 68, 0.6);
}

.battle-button:active {
  transform: translateY(0);
}

.battle-button.attack-button {
  background: linear-gradient(135deg, #ff4444, #cc0000);
  box-shadow: 0 5px 15px rgba(255, 68, 68, 0.4);
}

.battle-button.attack-button:hover {
  box-shadow: 0 7px 20px rgba(255, 68, 68, 0.6);
}

.battle-button.disabled {
  background: rgba(255, 68, 68, 0.3);
  cursor: wait;
  box-shadow: none;
  transform: scale(0.95);
}

.enemy-turn-indicator {
  padding: 15px 30px;
  color: #ffaa00;
  font-size: 1.2rem;
  font-weight: bold;
  text-align: center;
  animation: enemyTurn 1s ease-in-out infinite;
}

@keyframes enemyTurn {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

/* Адаптация для мобильных */
@media (max-width: 768px) {
  .battle-container {
    padding: 20px;
  }

  .battle-title {
    font-size: 1.4rem;
  }

  .ships-container {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .ship-icon {
    font-size: 2.5rem;
  }

  .battle-button {
    padding: 12px 24px;
    font-size: 1rem;
  }

  .close-button {
    width: 35px;
    height: 35px;
    font-size: 1rem;
  }
}
